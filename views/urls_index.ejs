<!DOCTYPE html>

<html lang="en">

  <head>
    <link rel="stylesheet" type="text/css" href="myStyles.css">
  </head>

  <body>
    <% include partials/_header %>
    <% if (!user) { %>
      <a href="/login"><button type= "submit">Login</button></a>
    <% } %>

    <div class="container">
      <table style="width:70%">
        <!-- header for the table one time only -->
        <tr>
          <th>Short URLs</th>
          <th colspan="2">URLs</th>
        </tr>
        <!-- Data part of the Table -->
        <% for(let url of urlArray) { %>
          <tr>
            <td><a href="/u/<%= url.shortURL %>"><%= url.shortURL %></a></td>
            <td><%= url.longURL %></td>
            <td><form method="POST" action="/urls/<%= url.shortURL %>?_method=DELETE"><button type= "submit"> Delete URL</button></form></td>
            <td><a href="/urls/<%= url.shortURL %>"><button type= "submit">Edit URL</a></td>
          </tr>
        <% } %>
      </table> <!-- Table tag closes -->
      <a href="urls/new"><button type= "submit">Let's create a Tiny Link!</button></a>
    </div>
    

  </body>

</html>